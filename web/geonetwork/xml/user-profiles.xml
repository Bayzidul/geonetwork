		<!-- Allow GeoNetwork Mapping services -->
		<allow service="xml.metadata.insert"/>
		<allow service="xml.metadata.delete"/>
		<allow service="xml.user.list"/>

		<!-- MEF facilities -->
		<allow service="mef.import"/>

	</profile>

