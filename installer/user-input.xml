<?xml version="1.0" encoding="UTF-8"?>

<userInput>
	
	<!-- ==================================================================================== -->
	<!-- === General settings ===-->
	<!-- ==================================================================================== -->
	
	<panel order="0">
	
		<field type="title" txt="General settings (1/2)"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="SERVLET">
			<description	txt   ="Please enter the servlet name that will be used to access GeoNetwork using a browser"/>
			<spec				txt   ="Servlet name"
								layout="AN:20:40" 
								set   ="0:geonetwork"/>
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The servlet name is mandatory"/>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="PORT">
			<description	txt   ="Please enter the port number that will be used by the integrated Jetty server"/>
			<spec				txt   ="Host port"
								layout="N:6:6"
								set   ="0:8080"/>
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The port is mandatory"/>
		</field>		
	</panel>
	
	<!-- ==================================================================================== -->
	<!-- === JDBC access settings ===-->
	<!-- ==================================================================================== -->
	
	<panel order="1">
	
		<field type="title" txt="Database settings (JDBC access) (2/2)"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify a DBMS account that this GeoNetwork installation will use to connect to a database. We strongly suggest to provide a name and password of at least 6 characters each. Make sure that the DBMS is up and running because the setup script will create the database schema druing the installation process. If you use a DBMS other than McKoi, you will be requested to copy its jdbc driver into the web/WEB-INF/lib dir."/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="JDBC_USER">
			<spec				txt   ="Username"
								layout="AN:20:30"
								set   ="0:administrator" />
			<validator		class ="com.izforge.izpack.util.RegularExpressionValidator" 
								txt   ="The DBMS username must be at least 1 character">
				<param name="pattern" value="\w{1,}"/>
			</validator>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="JDBC_PASSWORD">
			<spec				txt   ="Password"
								layout="AN:20:30" />
			<validator		class ="com.izforge.izpack.util.RegularExpressionValidator" 
								txt   ="The password must be at least 1 alpha-numeric character">
				<param name="pattern" value="\w{1,}"/>
			</validator>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify a connection url. Typical urls are:"/>
		<field type="staticText" txt="     jdbc:oracle:thin:@HOST:1521:SID"/>
		<field type="staticText" txt="     jdbc:mysql://HOST/DATABASE"/>
		<field type="staticText" txt="     jdbc:postgresql:DATABASE"/>
		<field type="staticText" txt="Leave as it is to use the internal DBMS"/>
		<field type="staticText" txt=" "/>
		
		<field type="text" variable="JDBC_URL">
			<spec	txt ="Connection url"
					size="21"
					set ="jdbc:mckoi://localhost/" />
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify a DBMS driver to use"/>
		
		<field type="radio" variable="JDBC_DRIVER">
			<spec>
				<choice txt="Internal (uses McKoi)"  value="com.mckoi.JDBCDriver" set="true"/>
				<choice txt="Oracle"                 value="oracle.jdbc.driver.OracleDriver"/>
				<choice txt="MySql"                  value="com.mysql.jdbc.Driver"/>
				<choice txt="PostgreSQL"             value="org.postgresql.Driver"/>
			</spec>
		</field>
	</panel>
	
	<!-- ==================================================================================== -->	
		
</userInput> 
