<?xml version="1.0" encoding="UTF-8"?>

<userInput>
	
	<!-- ==================================================================================== -->
	<!-- === General settings ===-->
	<!-- ==================================================================================== -->
	
	<panel order="0">
	
		<field type="title" txt="General settings (1/4)"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="ORGANIZATION">
			<description	txt   ="Please enter your organization's name"/>
			<spec				txt   ="Organization name"
								layout="O:20:100" />
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The organization name is mandatory"/>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="SERVLET">
			<description	txt   ="Please enter the servlet name that will be used to access GeoNetwork using a browser"/>
			<spec				txt   ="Servlet name"
								layout="AN:20:40" 
								set   ="0:geonetwork"/>
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The servlet name is mandatory"/>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="PORT">
			<description	txt   ="Please enter the port number that will be used by the integrated Jetty server"/>
			<spec				txt   ="Host port"
								layout="N:6:6"
								set   ="0:8080"/>
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The port is mandatory"/>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="SITE_ID">
			<description	txt   ="Please enter a UNIQUE id that identifies this geonetwork site. (Do NOT just use 'geonetwork' for this!) "/>
			<spec				txt   ="Site ID"
								layout="O:20:50"/>
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The site id is mandatory"/>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="NETWORK">
			<description	txt         ="Please enter your Intranet network address. This is used to discriminate between intranet and Internet users. Ask your network administrator for details."/>
			<spec				txt         ="Network address" 
								layout      ="N:3:3 - N:3:3 - N:3:3 - N:3:3" 
								set         ="0:192 1:168 2:0 3:0" 
								resultFormat="specialSeparator" 
								separator   ="."/>
			<validator		class       ="com.izforge.izpack.util.NotEmptyValidator" 
								txt         ="The network address is mandatory"/>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="NETMASK">
			<spec				txt         ="Network mask. Ask your network administrator for details" 
								layout      ="N:3:3 - N:3:3 - N:3:3 - N:3:3" 
								set         ="0:255 1:255 2:0 3:0" 
								resultFormat="specialSeparator" 
								separator   ="."/>
			<validator		class       ="com.izforge.izpack.util.NotEmptyValidator" 
								txt         ="The network mask is mandatory"/>
		</field>
	</panel>
	
	<!-- ==================================================================================== -->
	<!-- === Geonetwork administrator ===-->
	<!-- ==================================================================================== -->
	
	<panel order="1">
	
		<field type="title" txt="GeoNetwork Administrator (2/4)"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please provide information for the GeoNetwork site administrator"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="ADMIN_USER">
			<spec				txt   ="Username. The log in name for the administrator"
								layout="O:20:30"
								set   ="0:administrator" />
			<validator		class ="com.izforge.izpack.util.RegularExpressionValidator" 
								txt   ="The administrator name must be at least 6 characters">
				<param name="pattern" value="\w{6,}"/>
			</validator>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="ADMIN_PASSWORD">
			<spec				txt   ="Password"
								layout="O:20:30" />
			<validator		class ="com.izforge.izpack.util.RegularExpressionValidator" 
								txt   ="The password must be at least 6 alpha-numeric characters">
				<param name="pattern" value="\w{6,}"/>
			</validator>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="ADMIN_SURNAME">
			<spec				txt   ="Surname"
								layout="O:20:30" />
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The surname is mandatory"/>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="ADMIN_NAME">
			<spec				txt   ="Name"
								layout="O:20:30" />
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The name is mandatory"/>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="ADMIN_MAIL">
			<spec				txt   ="EMail address (used for user feedback)"
								layout="O:20:80" />
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The email is mandatory"/>
		</field>
		
	</panel>
	
	<!-- ==================================================================================== -->
	<!-- === JDBC access settings ===-->
	<!-- ==================================================================================== -->
	
	<panel order="2">
	
		<field type="title" txt="Database settings (JDBC access) (3/4)"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify a DBMS account that this GeoNetwork installation will use to connect to a database. We strongly suggest to provide a name and password of at least 6 characters each. Make sure that the DBMS is up and running because the setup script will create the database schema druing the installation process. If you use a DBMS other than McKoi, you will be requested to copy its jdbc driver into the web/WEB-INF/lib dir."/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="JDBC_USER">
			<spec				txt   ="Username"
								layout="AN:20:30"
								set   ="0:administrator" />
			<validator		class ="com.izforge.izpack.util.RegularExpressionValidator" 
								txt   ="The DBMS username must be at least 1 character">
				<param name="pattern" value="\w{1,}"/>
			</validator>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="JDBC_PASSWORD">
			<spec				txt   ="Password"
								layout="AN:20:30" />
			<validator		class ="com.izforge.izpack.util.RegularExpressionValidator" 
								txt   ="The password must be at least 1 alpha-numeric character">
				<param name="pattern" value="\w{1,}"/>
			</validator>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify a connection url. Typical urls are:"/>
		<field type="staticText" txt="     jdbc:oracle:thin:@HOST:1521:SID"/>
		<field type="staticText" txt="     jdbc:mysql://HOST/DATABASE"/>
		<field type="staticText" txt="Leave as it is to use the internal DBMS"/>
		<field type="staticText" txt=" "/>
		
		<field type="text" variable="JDBC_URL">
			<spec	txt ="Connection url"
					size="21"
					set ="jdbc:mckoi://localhost/" />
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify a DBMS driver to use"/>
		
		<field type="radio" variable="JDBC_DRIVER">
			<spec>
				<choice txt="Internal (uses McKoi)"  value="com.mckoi.JDBCDriver" set="true"/>
				<choice txt="Oracle"                 value="oracle.jdbc.driver.OracleDriver"/>
				<choice txt="MySql"                  value="com.mysql.jdbc.Driver"/>
			</spec>
		</field>
	</panel>
	
	<!-- ==================================================================================== -->
	<!-- === Other settings ===-->
	<!-- ==================================================================================== -->
	
	<panel order="3">
	
		<field type="title" txt="Other settings (4/4)"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify the SMTP server that will be used to send download statistics to the data publishers"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="SMTP_HOST">
			<spec				txt   ="Host"
								layout="O:20:50"
								set   ="0:smtp.yoursite.org" />
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The host is mandatory"/>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="SMTP_PORT">
			<spec				txt   ="Port"
								layout="N:6:6" 
								set   ="0:25"/>
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The port is mandatory"/>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="Please specify the port to use for incoming search requests using the Z39.50/ISO23950 protocol"/>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="Z3950_PORT">
			<spec				txt   ="Z3950 Port"
								layout="N:6:6"
								set   ="0:2100" />
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The port is mandatory"/>
		</field>
		
		<divider/><!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="staticText" txt="The following host name and port number are used to build links for resources. Make sure you use a valid host name and port!"/>
		
		<field type="rule" variable="PUBLIC_HOST">
			<description	txt   ="Please enter the host name of the computer where you are installing GeoNetwork."/>
			<spec				txt   ="Public host"
								layout="O:20:50"
								set   ="0:www.this-host.org"/>
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The public host is mandatory"/>
		</field>
		
		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
		
		<field type="rule" variable="PUBLIC_PORT">
			<description	txt   ="Please enter the host port of the computer where you are installing GeoNetwork. If you don't have special needs you can use the same value of the Jetty port entered into the first panel."/>
			<spec				txt   ="Public port"
								layout="N:6:6"
								set   ="0:8080" />
			<validator		class ="com.izforge.izpack.util.NotEmptyValidator" 
								txt   ="The public port is mandatory"/>
		</field>
	</panel>

	<!-- ==================================================================================== -->	
		
</userInput> 
